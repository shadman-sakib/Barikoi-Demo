<?xml version="1.0" encoding="utf-8"?>
<com.infideap.drawerbehavior.AdvanceDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <include
        layout="@layout/content_main_demo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.shreyaspatil.material.navigationview.MaterialNavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemStyle="rounded_right"
        android:fitsSystemWindows="true"
        app:insetForeground="@color/colorPrimaryDark"
        android:theme="@style/Widget.NavigationView.RippleEffect"
        app:itemTextAppearance="@style/OpenSansTextViewStyle"
        app:headerLayout="@layout/nav_header_main_demo"
        app:menu="@menu/activity_main_demo_drawer" />

</com.infideap.drawerbehavior.AdvanceDrawerLayout>
