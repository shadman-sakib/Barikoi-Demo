<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="32dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="2dp"
        app:srcCompat="@drawable/markericon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/textView_placename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"

            android:ellipsize="end"
            android:singleLine="false"
            android:maxLines="2"
            android:textColor="@color/colorGray"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="house 39,road 6, sector 13, house 39,road 6, sector 13, uttara, dhaka " />

        <TextView
            android:id="@+id/textViewAreaTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:background="@drawable/roun_rect_lightgray"
            android:textSize="10sp"
            tools:text="Uttara" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGray" />

    </LinearLayout>
</LinearLayout>