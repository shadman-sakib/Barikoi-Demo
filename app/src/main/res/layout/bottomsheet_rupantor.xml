<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomsheet_rupantor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_insetEdge="bottom"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="4dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <EditText
                android:id="@+id/search_rupantor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableRight="@drawable/ic_menu_search"
                android:drawableTint="@color/colorGray"
                android:hint="Search address"
                android:inputType="textMultiLine"
                android:fontFamily="@font/opensansfamily"
                android:textSize="12sp"
                android:padding="12dp"
                android:imeOptions="actionDone" />
        </com.google.android.material.textfield.TextInputLayout>


<!--        <Button-->
<!--            android:id="@+id/rupantor_button"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="@drawable/button_shape"-->
<!--            android:padding="8dp"-->
<!--            android:textAllCaps="true"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="15sp"-->
<!--            android:textStyle="bold"-->
<!--            android:layout_marginBottom="8dp"-->
<!--            android:text="Search" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/resultpane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="Fixed Address:"
                android:textColor="@color/black"
                android:fontFamily="@font/opensansbold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fixed_addresstext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:minLines="1"
                Tools:text=" house 39 road 6 sector 13 Uttara" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geocoded Address: "
            android:textSize="15sp"
            android:fontFamily="@font/opensansbold"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/black" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansbold"
                    android:text="Address"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rupantor_addresstext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    Tools:text="house 39 road 6 sector 13 "
                    android:layout_weight="1"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Place Type"
                    android:fontFamily="@font/opensansbold"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rupantor_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    Tools:text="TextView" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Unique Code"
                    android:fontFamily="@font/opensansbold"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rupantor_ucodetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    Tools:text="TextView" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:fontFamily="@font/opensansbold"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rupantor_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    Tools:text="TextView" />
            </TableRow>
        </TableLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>